<fieldset style="margin:10px 0; padding:10px;">
  <legend>Resource Costs</legend>

  <div style="display:grid; grid-template-columns: repeat(3, 1fr); gap:10px;">
    <label>
      Vitality
      <input type="number" name="system.costs.vitality" value="{{system.costs.vitality}}" min="0" />
    </label>

    <label>
      Stamina
      <input type="number" name="system.costs.stamina" value="{{system.costs.stamina}}" min="0" />
    </label>

    <label>
      Mana
      <input type="number" name="system.costs.mana" value="{{system.costs.mana}}" min="0" />
    </label>
  </div>
</fieldset>
