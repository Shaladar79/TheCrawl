<fieldset style="margin:10px 0; padding:10px;">
  <legend>Scaling</legend>

  <div style="display:grid; grid-template-columns: 1fr 1fr; gap:10px;">
    <label>
      Mode
      <input type="text" name="system.scaling.mode" value="{{system.scaling.mode}}" placeholder="none / perTier / custom" />
    </label>

    <label>
      Per Tier
      <input type="number" name="system.scaling.perTier" value="{{system.scaling.perTier}}" />
    </label>
  </div>
</fieldset>
