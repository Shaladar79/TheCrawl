<fieldset style="margin:10px 0; padding:10px;">
  <legend>Race Details</legend>

  <div style="display:grid; grid-template-columns: 1fr 1fr; gap:10px;">
    <label>
      Key
      <input type="text" name="system.key" value="{{system.key}}" placeholder="e.g. human, elf, stoneborn" />
    </label>

    <label>
      Traits (comma-separated)
      <input type="text" name="system.traits" value="{{system.traits}}" placeholder="e.g. hardy, nocturnal, aquatic" />
    </label>

    <label>
      Category
      <input type="text" name="system.category" value="{{system.category}}" placeholder="race" />
    </label>
  </div>
</fieldset>
