<fieldset style="margin:10px 0; padding:10px;">
  <legend>Armor</legend>

  <div style="display:grid; grid-template-columns: 1fr 1fr; gap:10px;">
    <label>
      Armor Value
      <input type="number" name="system.armor.armorValue" value="{{system.armor.armorValue}}" />
    </label>
  </div>

  <label style="display:block; margin-top:10px;">
    Properties (comma-separated)
    <input type="text" name="system.armor.properties" value="{{system.armor.properties}}" placeholder="e.g. heavy, flexible, reinforced" />
  </label>
</fieldset>
