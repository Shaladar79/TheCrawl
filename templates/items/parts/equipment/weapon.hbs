<fieldset style="margin:10px 0; padding:10px;">
  <legend>Weapon</legend>

  <div style="display:grid; grid-template-columns: 1fr 1fr; gap:10px;">
    <label>
      Damage
      <input type="text" name="system.weapon.damage" value="{{system.weapon.damage}}" placeholder="e.g. 1d6+2" />
    </label>

    <label>
      Range
      <input type="text" name="system.weapon.range" value="{{system.weapon.range}}" placeholder="e.g. melee, 10m, 60ft" />
    </label>
  </div>

  <label style="display:block; margin-top:10px;">
    Properties (comma-separated)
    <input type="text" name="system.weapon.properties" value="{{system.weapon.properties}}" placeholder="e.g. finesse, two-handed, reach" />
  </label>
</fieldset>
