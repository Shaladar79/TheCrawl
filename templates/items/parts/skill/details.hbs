<fieldset style="margin:10px 0; padding:10px;">
  <legend>Skill Details</legend>

  <div style="display:grid; grid-template-columns: 1fr 1fr; gap:10px;">
    <label>
      Key
      <input
        type="text"
        name="system.key"
        value="{{system.key}}"
        placeholder="e.g. stealth, history, pyromancy"
      />
    </label>

    <label>
      Category
      <select name="system.category">
        {{#each skillCategories as |c|}}
          <option value="{{c}}" {{#if (eq ../system.category c)}}selected{{/if}}>{{c}}</option>
        {{/each}}
      </select>
    </label>

    <label>
      Governing Attribute
      <select name="system.governingAttribute">
        {{#each attributeOptions as |opt|}}
          <option value="{{opt}}" {{#if (eq ../system.governingAttribute opt)}}selected{{/if}}>
            {{opt}}
          </option>
        {{/each}}
      </select>
    </label>

    <label style="display:flex; gap:10px; align-items:center; padding-top:22px;">
      <input
        type="checkbox"
        name="system.trained"
        {{#if system.trained}}checked{{/if}}
      />
      Trained
    </label>

    <label>
      Tier
      <select name="system.tier">
        {{#each tierOptions as |t|}}
          <option value="{{t}}" {{#if (eq ../system.tier t)}}selected{{/if}}>{{t}}</option>
        {{/each}}
      </select>
    </label>

    <label>
      Misc Bonus
      <input
        type="number"
        name="system.bonus.misc"
        value="{{system.bonus.misc}}"
      />
    </label>
  </div>
</fieldset>

<fieldset style="margin:10px 0; padding:10px;">
  <legend>Advancement Progress</legend>

  <div style="display:grid; grid-template-columns: 1fr 1fr; gap:10px;">
    <label>
      Current Progress
      <input
        type="number"
        name="system.progress.current"
        value="{{system.progress.current}}"
        min="0"
      />
    </label>

    <label>
      Target Progress
      <input
        type="number"
        name="system.progress.target"
        value="{{system.progress.target}}"
        min="0"
      />
    </label>

    <label style="display:flex; gap:10px; align-items:center; padding-top:22px;">
      <input
        type="checkbox"
        name="system.progress.locked"
        {{#if system.progress.locked}}checked{{/if}}
      />
      Lock Progress
    </label>

    <label>
      Last Gain
      <input
        type="number"
        name="system.progress.lastGain"
        value="{{system.progress.lastGain}}"
        min="0"
      />
    </label>
  </div>

  <p style="opacity:0.8; margin:10px 0 0;">
    Progress is intended for GM-controlled automation. Target will later be derived from Tier (Tier Ã— 10) unless overridden.
  </p>
</fieldset>

<fieldset style="margin:10px 0; padding:10px;">
  <legend>Modifiers</legend>

  <p style="opacity:0.8; margin:0 0 10px;">
    Modifiers define how this Skill affects attributes, resources,
    derived stats, or skills. Editing UI will be added later.
  </p>

  <pre style="white-space:pre-wrap; background:#111; color:#ddd; padding:8px; border-radius:4px;">{{json system.modifiers}}</pre>
</fieldset>
