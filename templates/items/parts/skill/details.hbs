<fieldset style="margin:10px 0; padding:10px;">
  <legend>Talent Details</legend>

  <div style="display:grid; grid-template-columns: 1fr 1fr; gap:10px;">
    <label>
      Key
      <input type="text" name="system.key" value="{{system.key}}" placeholder="e.g. stealth, longsword, pyromancy" />
    </label>

    <label>
      Category
      <input type="text" name="system.category" value="{{system.category}}" placeholder="general / weapon / spell / lore / etc." />
    </label>

    <label>
      Governing Attribute
      <select name="system.governingAttribute">
        {{#each attributeOptions as |opt|}}
          <option value="{{opt}}" {{#if (eq ../system.governingAttribute opt)}}selected{{/if}}>{{opt}}</option>
        {{/each}}
      </select>
    </label>

    <label style="display:flex; gap:10px; align-items:center; padding-top:22px;">
      <input type="checkbox" name="system.trained" {{#if system.trained}}checked{{/if}} />
      Trained
    </label>

    <label>
      Tier
      <input type="number" name="system.tier" value="{{system.rank}}" />
    </label>

    <label>
      Misc Bonus
      <input type="number" name="system.bonus.misc" value="{{system.bonus.misc}}" />
    </label>
  </div>
</fieldset>
